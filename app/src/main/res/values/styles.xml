<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/design_default_color_primary_dark</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/design_default_color_primary_dark</item>
        <item name="android:layout_marginRight">@dimen/def_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>

    </style>

    <style name="TextData" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/design_default_color_primary</item>
        <item name="android:textSize">@dimen/def_data_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <dimen name="def_data_size">24dp</dimen>
</resources>